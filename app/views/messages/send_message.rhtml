<form action="/send_message" method="post">

<fieldset><ol>
  <li>To:</li>
  <li><input class="post_field" id="post_title" name="message[to]" size="30" type="text" <% if params[:to] %>value="<%= params[:to] %>"<% end %>/></li>
  <li>Message:</li>
  <li><textarea class="post_field" cols="70" id="post_body" name="message[body]" rows="20"></textarea></li>
</ol>
</fieldset>

<fieldset class="submit"><input name="commit" type="submit" value="Send" /></fieldset>
</form>

